{{#partial "content"}}

    {{#if editPost}}
        <h1>Edit Post</h1>
        <form action="/heroes/new" method="post">
            <label for="name">Hero Name</label>
            <input id="name" name="name" type="text">
            <label for="age">Hero Age</label>
            <input id="age" name="age" type="number">
            <label for="ability">Hero Ability</label>
            <input id="ability" name="ability" type="text">
            <label for="weakness">Weakness</label>
            <input id="weakness" name="weakness" type="text">
            <select class="custom-select form-control" id="squadId" name="squadId" style="width:70px;">
                {{#each squads}}
                    <option val="{{id}}">{{name}}</option>
                {{/each}}
            </select>
        </form>
        <div>
        <h3>My Squads</h3>
                {{#each squads}}
                    <p>Name : {{name}}</p>
                    <p>Country : {{mission}}</p>
                {{/each}}

        </div>

    {{else}}
        <h1>Create a hero</h1>
        <form action="/heroes/new" method="post">
            <label for="name">Hero Name</label>
            <input id="name" name="name" type="text">
            <label for="age">Hero Age</label>
            <input id="age" name="age" type="number">
            <label for="ability">Hero Ability</label>
            <input id="ability" name="ability" type="text">
            <label for="weakness">Weakness</label>
            <input id="weakness" name="weakness" type="text">

        <label for="squadId">Squad</label>
            <select class="custom-select form-control" id="squadId" name="squadId" required>
                {{#each squads}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
        <p>Cna see section for the squads</p>
    {{/if}}
        <button type="submit" class="btn btn-default rounded-pill">Create Hero</button>
    </form>
{{/partial}}
{{>layout.hbs}}
{{#partial "content"}}
    <p>Hero Detail : </p>
    <p>{{hero.name}}</p>
    <p>{{hero.ability}}</p>
    <p>{{hero.weakness}}</p>
    <p>{{hero.age}}</p>
    <h5>Hero status:</h5>
    <p>{{hero.createdAt}}</p>
    <p>
        {{#if hero.created}}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Created
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft

        {{/if}}
    </p>

{{/partial}}
{{>layout.hbs}}
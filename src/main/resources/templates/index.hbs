{{#partial "content"}}
    <h1>Heroes</h1>

    {{#if heroes}}
        {{#each heroes}}
            <p>Current Heroes</p>
            <p>Name: {{name}} Power: {{ability}}  Weakness:{{weakness}} </p>
        {{/each}}
        {{else}}
        <p>No Heroes!!</p>
    {{/if}}

    <h2>Create your Hero:</h2>
    <form action="/heroes/new" method="HERO">
        <label for="name">Hero Name</label>
        <input id="name" name="name" type="text">
        <label for="age">Hero Age</label>
        <input id="age" name="age" type="number">
        <label for="ability">Hero Ability</label>
        <input id="ability" name="ability" type="text">
        <label for="weakness">Weakness</label>
        <input id="weakness" name="weakness" type="text">

        <button type="submit" class="btn btn-default rounded-pill">Create Hero</button>
    </form>
{{/partial}}
{{> layout.hbs}}